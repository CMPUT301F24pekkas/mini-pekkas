<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.event.organizer.EventOrgFragment">

            <TextView
                android:id="@+id/eventNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Community Event!"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/eventImageView"
                android:layout_width="197dp"
                android:layout_height="132dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="211dp"
                android:layout_marginBottom="570dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventNameView"
                app:layout_constraintVertical_bias="0.0"
                tools:src="@tools:sample/backgrounds/scenic" />

            <ImageButton
                android:id="@+id/editEventPictureButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="157dp"
                android:layout_marginTop="98dp"
                android:layout_marginEnd="41dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/edit_button"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/qrImage"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/eventImageView"
                app:layout_constraintTop_toTopOf="@+id/eventImageView"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="130dp"
                android:layout_height="131dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eventImageView"
                app:layout_constraintTop_toBottomOf="@+id/eventNameView"
                tools:src="@drawable/camera" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="378dp"
                android:layout_height="96dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rectangle"
                android:text=" "
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventImageView" />

            <TextView
                android:id="@+id/chosenAmountView"
                android:layout_width="407dp"
                android:layout_height="172dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/rectangle"
                android:text=" "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventScrollableView"
                app:layout_constraintVertical_bias="0.333" />

            <TextView
                android:id="@+id/organizerNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="132dp"
                android:layout_marginBottom="46dp"
                android:text="Organizer Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/editEventButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/profilePictureImage"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/locationView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="94dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="223dp"
                android:layout_marginBottom="21dp"
                android:text="Location"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <Button
                android:id="@+id/editEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="272dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="25dp"
                android:text="Edit Event"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:rippleColor="#C5C1C1" />

            <ImageView
                android:id="@+id/profilePictureImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/circle"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="#000000"
                app:layout_constraintBottom_toTopOf="@+id/eventScrollableView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageButton
                android:id="@+id/chooseButton"
                android:layout_width="116dp"
                android:layout_height="50dp"
                android:layout_marginStart="281dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/ripple_rec"
                android:src="@drawable/choose"
                app:layout_constraintBottom_toBottomOf="@+id/chosenAmountView"
                app:layout_constraintEnd_toEndOf="@+id/chosenAmountView"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toBottomOf="@+id/enrolledButton" />

            <ImageButton
                android:id="@+id/waitButton"
                android:layout_width="114dp"
                android:layout_height="50dp"
                android:layout_marginStart="147dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ripple_rec"
                android:scaleType="centerCrop"
                android:src="@drawable/wait_list"
                app:layout_constraintBottom_toBottomOf="@+id/chosenAmountView"
                app:layout_constraintEnd_toStartOf="@+id/chooseButton"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toBottomOf="@+id/canceledButton" />

            <LinearLayout
                android:id="@+id/eventScrollableView"
                android:layout_width="408dp"
                android:layout_height="206dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/view">


                    <TextView
                        android:id="@+id/eventDescriptionView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="event description"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eventDetailsView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="event details"
                        android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Stats and Lists"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/chosenPartView"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toTopOf="@+id/chosenAmountView" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="119dp"
                android:layout_marginEnd="294dp"
                android:layout_marginBottom="16dp"
                android:text="Choose More?"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/chosenAmountView"
                app:layout_constraintEnd_toEndOf="@+id/chosenAmountView"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toTopOf="@+id/chosenAmountView" />

            <TextView
                android:id="@+id/chosenPartView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="300dp"
                android:text="100"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/canceledAmountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="100"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/canceledButton"
                app:layout_constraintEnd_toStartOf="@+id/enrolledAmountView"
                app:layout_constraintStart_toEndOf="@+id/chosenPartView"
                app:layout_constraintTop_toTopOf="@+id/chosenAmountView" />

            <TextView
                android:id="@+id/enrolledAmountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="321dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="41dp"
                android:text="88/100"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/enrolledButton"
                app:layout_constraintEnd_toEndOf="@+id/chosenAmountView"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toTopOf="@+id/chosenAmountView" />

            <Button
                android:id="@+id/chosenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="294dp"
                android:layout_marginBottom="70dp"
                android:text="Chosen"
                app:layout_constraintBottom_toBottomOf="@+id/chosenAmountView"
                app:layout_constraintEnd_toEndOf="@+id/chosenAmountView"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toBottomOf="@+id/chosenPartView" />

            <Button
                android:id="@+id/canceledButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="153dp"
                android:text="Canceled"
                app:layout_constraintEnd_toEndOf="@+id/chosenAmountView"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toTopOf="@+id/chosenAmountView" />

            <Button
                android:id="@+id/enrolledButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="286dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="17dp"
                android:text="Enrolled"
                app:layout_constraintEnd_toEndOf="@+id/chosenAmountView"
                app:layout_constraintStart_toStartOf="@+id/chosenAmountView"
                app:layout_constraintTop_toTopOf="@+id/chosenAmountView" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>