<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="409dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/chosenUserImage"
        android:layout_width="77dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/user_picture" />

    <LinearLayout
        android:layout_width="231dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chosenUserName"
            android:layout_width="247dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="Person"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/chosenStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="status" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteChosenButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/delete_button" />

    <ImageButton
        android:id="@+id/chosenUserLocation"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/location" />

</LinearLayout>